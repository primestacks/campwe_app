<%- include ('./partials/header') %>
<div class="inner-form-wrapper"> 
    <div class="container login-container">
        <div class="row login">
            <div class="col-md-4  col-sm-6">
                <form action="/login" method="POST" class="form">
                    <div><h1>Login</h1></div>
                    <div class="login-form">
                        <div class="form-items">
                            <input type="text" name="username" autocomplete="off" >
                            <label for="username">Username or Email: </label>
                        </div>
                        <div class="form-items">
                            <input type="password" name="password" autocomplete="off">
                            <label for="password">Password: </label>
                        </div>
                        <div class="form-items">
                            <button>Login</button>
                        </div>
                        <div class="form-items">
                            <p> <a href="#">Forgotten password?</a></p>
                            <p>Don't have an account? <a href="/register">Sign Up</a></p>
                        </div>
                    </div>
                </form>
            </div>

            <div class="col-md-8 col-sm-6 login-hero">
                <div>
                    <img src="https://img.freepik.com/free-vector/mobile-phone-unlocked-notification-smartphone-security-with-password-lock-user-login-authorization-vector_555028-12.jpg?size=626&ext=jpg" alt="">
                    <h2>Sign-In to enjoy all our amazing features </h2>
                    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Minus iure ro nemo harum temporibus voluptate eveniet consequuntur.</p>
                </div>
                
            </div>

        </div>
    </div>
</div>

<%- include ('./partials/footer') %>