<%- include ('./partials/auth-header')%>

<div class="container">
	<div class="row py-5 mt-2 align-items-center">
		<div class="col-md-5 pr-lg-5 mb-5 mb-md-0">
			<h1>Login</h1>
			<p class="font-italic text-muted mb-0">
				Create a minimal registeration page using Bootstrap 4 HTML form
				elements.
			</p>
			<img
				src="https://bootstrapious.com/i/snippets/sn-registeration/illustration.svg"
				alt=""
				class="img-fluid mb-3 d-none d-md-block"
			/>
		</div>

		<!-- Registeration Form -->
		<div class="col-md-6 col-lg-5 ml-auto">
			<form action="/login" method="post">
				<div class="row">
					<!-- Social Login -->
					<div class="form-group col-lg-12 mx-auto">
						<a href="#" class="btn btn-primary btn-block py-2 btn-google">
							<i class="fa-brands fa-google"></i>
							<span class="font-weight-bold">Continue with Google</span>
						</a>
					</div>

					<!-- Divider Text -->
					<div
						class="form-group col-lg-12 mx-auto d-flex align-items-center my-4">
						<div class="border-bottom w-100 ml-5"></div>
							<span class="px-2 small text-muted font-weight-bold text-muted">OR</span>
						<div class="border-bottom w-100 mr-5"></div>
					</div>

					<!-- Last Name -->
					<div class="input-group col-lg-12 mb-4">
						<div class="input-group-prepend">
							<span
								class="input-group-text bg-white px-4 border-md border-right-0">
								<i class="fa fa-user text-muted"></i>
							</span>
						</div>
						<input id="lastName" type="text" name="username" placeholder="email"
							class="form-control bg-white border-left-0 border-md"/>
					</div>

					<!-- Password -->
					<div class="input-group col-lg-12 mb-4">
						<div class="input-group-prepend">
							<span
								class="input-group-text bg-white px-4 border-md border-right-0">
								<i class="fa fa-lock text-muted"></i>
							</span>
						</div>
						<input id="password" type="password" name="password" placeholder="Password"
							class="form-control bg-white border-left-0 border-md" />
					</div>

					<!-- Submit Button -->
					<div class="form-group col-lg-12 mx-auto mb-0">
						<button
							type="submit"
							class="btn btn-secondary btn-submit btn-lg btn-block py-2 bg-black
						>
							<span class="font-weight-bold">Login</span>
						</button>
					</div>

					<!-- Already Registered -->
					<div class="text-center w-100">
						<p class="text-muted font-weight-bold">
							Don't have an Account?
							<a href="/register" class="text-primary ml-2">Create An Account</a>
						</p>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>

<%- include ('./partials/footer') %>
